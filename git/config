[alias]
  ; git-branch
  br  = branch
  brd = branch -d
  brD = branch -D
  fb  = find-branch
  del = bulk-delete

  ; git-cat-file
  dump = cat-file -p
  type = cat-file -t

  ; git-checkout
  co    = checkout
  cob   = branchify ; checkout -b with branchify support.
  bug   = branchify bug/
  feature = branchify feature/
  hotfix  = branchify hotfix/
  spike   = branchify spike/
  copr  = pull-request-checkout
  prco  = pull-request-checkout
  back  = checkout -

  ; git-commit
  amend = commit -a --amend

  ; git-diff
  conflicts  = diff --name-only --diff-filter=U
  df  = diff --staged
  dt  = diff-tree --no-commit-id --name-only -r

  ; git-logs
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

  ; git-rebase
  up  = pull --rebase origin develop
  upm = pull --rebase origin master
  ri  = rebase -i

  ; git-reset
  ditch   = reset HEAD~1 --hard
  undo  = reset HEAD~1 --mixed

  ; git-status
  st = status
