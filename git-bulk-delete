#!/bin/bash
found=($(git branch | sed 's/[\*]//g'))
current_branch=$(git rev-parse --abbrev-ref HEAD)

red='\033[0;31m'
yellow='\033[1;33m'
green='\e[92m'
nc='\033[0m' # No Color

if [ "$1" == '-D' ];then
   del='-D'
   notify_color="$red"
   echo 'OPERATING IN FORCE DELETE MODE!'
else
    del='-d'
    notify_color="$yellow"
fi

for i in "${!found[@]}"
do
  if [ "${found[$i]}" != "master" ] && [ "${found[$i]}" != "develop" ]  && [ "${found[$i]}" != "$current_branch" ];then
    printf "branch ${del} to delete branch ${notify_color}${found[$i]}${nc}? "
    read -r response
    if [ "$response" == "y" ] || [ "$response" == "yes" ];then
       git branch "${del}" "${found[$i]}"
    elif [ "$response" == "q" ] || [ "$response" == "quit" ];then
        exit 1
    else
        printf "${green}Skipped ${found[$i]}${nc}\n"
    fi
  fi
done

echo 'Done.'